{
  "name": "@raincity/base-models",
  "version": "0.1.0",
  "description": "Shared Zod models and schemas for RainCity authentication and user management",
  "main": "index.ts",
  "module": "index.ts",
  "type": "module",
  "private": false,
  "exports": {
    ".": {
      "import": "./index.ts",
      "types": "./index.ts"
    }
  },
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts index.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts index.ts"
  },
  "keywords": [
    "models",
    "zod",
    "schemas",
    "typescript",
    "authentication"
  ],
  "author": "dpw",
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "typescript": "^5",
    "zod": "^4.1.12"
  }
}
